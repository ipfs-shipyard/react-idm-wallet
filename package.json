{
  "name": "react-idm-wallet",
  "version": "0.0.0",
  "description": "React bindings for the reference implementation of the IDM Wallet in JavaScript",
  "main": "lib/index.js",
  "module": "es/index.js",
  "homepage": "https://github.com/ipfs-shipyard/react-idm-wallet#readme",
  "author": "Andr√© Cruz <andre@moxy.studio>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/react-idm-wallet.git"
  },
  "keywords": [
    "react",
    "idm",
    "wallet",
    "connect",
    "hoc",
    "identity",
    "decentralized"
  ],
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/react-idm-wallet/issues"
  },
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "build:commonjs": "BABEL_ENV=commonjs babel src -d lib --delete-dir-on-start",
    "build:es": "BABEL_ENV=es babel src -d es --delete-dir-on-start",
    "build": "npm run build:commonjs && npm run build:es",
    "test": "jest --coverage",
    "lint": "eslint --ignore-path .gitignore .",
    "prerelease": "npm t && npm run lint && npm run build",
    "release": "standard-version"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "react-testing-library/cleanup-after-each"
    ],
    "collectCoverageFrom": [
      "src/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "idm-wallet": "^0.1.0"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.0",
    "invariant": "^2.2.4",
    "lodash": "^4.17.11",
    "memoize-one": "^5.0.4",
    "p-is-promise": "^2.1.0",
    "p-try": "^2.2.0",
    "prop-types": "^15.7.2",
    "shallow-equal": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-jest": "^24.5.0",
    "babel-preset-moxy": "^3.0.4",
    "commitlint": "^7.5.2",
    "delay": "^4.2.0",
    "eslint": "^5.13.0",
    "eslint-config-moxy": "^7.1.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.4",
    "p-each-series": "^2.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "standard-version": "^5.0.0"
  }
}
